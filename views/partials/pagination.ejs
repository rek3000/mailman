<ul class="pagination">
  <li class="page-item <%= currentPage === 1 ? 'disabled' : 'enabled' %>">
    <a href="/<%=name%>/<%=currentPage - 1%>" class="page-link nav"> < </a>
  </li>
  <% for (let i=1; i <=totalPages; i++) { %>
    <li class="page-item <%= currentPage === i ? 'active' : 'inactive' %>">
      <a href="/<%=name%>/<%-i%>" class="page-link"><%-i %></a>
    </li>
    <% } %>
      <li class="page-item <%= currentPage === totalPages ? 'disabled' : 'enabled' %>">
        <a href="/<%=name%>/<%=currentPage + 1%>" class="page-link"> > </a>
      </li>
</ul>
